    <servlet>
        <servlet-name>JobListServlet</servlet-name>
        <servlet-class>controller.JobListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>JobSearchServlet</servlet-name>
        <servlet-class>controller.JobSearchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>JobAddServlet</servlet-name>
        <servlet-class>controller.JobAddServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>JobEditServlet</servlet-name>
        <servlet-class>controller.JobEditServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>JobDeleteServlet</servlet-name>
        <servlet-class>controller.JobDeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>JobListServlet</servlet-name>
        <url-pattern>/jobs</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>JobSearchServlet</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>JobAddServlet</servlet-name>
        <url-pattern>/job/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>JobEditServlet</servlet-name>
        <url-pattern>/job/edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>JobDeleteServlet</servlet-name>
        <url-pattern>/job/delete</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>views/home/home.jsp</welcome-file>
    </welcome-file-list>
</web-app>
